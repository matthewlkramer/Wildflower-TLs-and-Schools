{
  "installCommand": "NPM_CONFIG_PRODUCTION=false npm ci",
  "buildCommand": "npm run build:vercel",
  "outputDirectory": "public",
  "rewrites": [
    { "source": "/api/(.*)", "destination": "/api/$1" }
  ],
  "routes": [
    { "handle": "filesystem" },
    { "src": "/(.*)", "dest": "/index.html" }
  ]
}
